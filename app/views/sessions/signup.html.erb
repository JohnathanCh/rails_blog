<%= form_for @user do |f| %>
    <%= f.label :name, "name" %>
    <%= f.text_field :name %>

    <%= f.label :age, "age" %>
    <%= f.text_field :age %>

    <%= f.label :email, "email" %>
    <%= f.text_field :email %>

    <%= f.label :password, "password" %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation, "password_confirmation" %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Submit" %>
<% end %>